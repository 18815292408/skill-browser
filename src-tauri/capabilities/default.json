{
  "$schema": "https://schema.tauri.app/config/2/capabilities",
  "identifier": "default",
  "description": "Skill浏览器默认权限",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    {
      "identifier": "fs:allow-read",
      "allow": [{ "path": "$HOME/**" }, { "path": "$APPDATA/**" }, { "path": "$LOCALAPPDATA/**" }]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [{ "path": "$APPDATA/**" }, { "path": "$LOCALAPPDATA/**" }]
    },
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file"
  ]
}
