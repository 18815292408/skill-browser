{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skill浏览器",
  "version": "0.1.0",
  "identifier": "com.skill.browser",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Skill浏览器",
        "width": 400,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
